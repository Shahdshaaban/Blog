@model Blog.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h2>Edit Department</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="DepName"></label>
        <input asp-for="DepName" class="form-control" />
        <span asp-validation-for="DepName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreateDate"></label>
        <input asp-for="CreateDate" class="form-control" />
        <span asp-validation-for="CreateDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
