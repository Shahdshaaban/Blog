@model Blog.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<h2>Delete Post</h2>

<div>
    <h4>Are you sure you want to delete this post?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author?.Name</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.PostType</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Created at</dt>
        <dd class="col-sm-10">@Model.CreateDate.ToString("MMMM dd, yyyy hh:mm tt")</dd>
    </dl>
</div>

<form asp-action="DeletePost" method="post">
    <input type="hidden" name="id" value="@Model.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
